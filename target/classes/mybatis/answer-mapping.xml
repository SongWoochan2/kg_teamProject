<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mybatis.answer">

	<insert id="answerInsert" parameterType="answerDTO">
		insert into answer values 
		(answer_code_seq.nextval, #{admin_id}, #{member_id}, #{answer_title}, #{answer_content}, sysdate)
	</insert>

	<select id="answerList" parameterType="java.util.Map" resultType="answerDTO">
		<![CDATA[
		select answer_code, answer_id, member_id, answer_title, answer_content, to_char(answer_date, 'YYYY.MM.DD') as answer_date 
		from (select rownum rn, tt.* 
				from (select * from answer order by answer_code desc) tt) 
		where rn >= #{startNum} and rn <= #{endNum}
		]]>
	</select>
	
	<select id="answerView" parameterType="int" resultType="answerDTO">
		select * from inquiry where inaquiry_code=#{inaquiry_code}
	</select>
	
	
	<delete id="answerDelete" parameterType="int">
		delete answer where answer_code=#{answer_code}
	</delete>

</mapper>
