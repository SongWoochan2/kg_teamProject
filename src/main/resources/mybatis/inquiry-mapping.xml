<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mybatis.inquiry">

	<insert id="inquiryWrite" parameterType="inquiryDTO">
		insert into inquiry values 
		(seq_inquiry_code.nextval, #{inquiry_id}, #{inquiry_type}, #{inquiry_title}, #{inquiry_content}, #{inquiry_file},  sysdate)
	</insert>
	
	<select id="inquiryList" parameterType="java.util.Map" resultType="inquiryDTO">
		<![CDATA[
		select inquiry_code, inquiry_id, inquiry_type, inquiry_title, inquiry_content, to_char(inquiry_date, 'YYYY.MM.DD') as inquiry_date 
		from (select rownum rn, tt.* 
				from (select * from inquiry order by inquiry_code desc) tt) 
		where rn >= #{startNum} and rn <= #{endNum}
		]]>
	</select>
	
	<select id="inquiryView" parameterType="int" resultType="inquiryDTO">
		select * from inquiry where inquiry_code=#{inquiry_code}
	</select>
	
	<select id="totalA" resultType="int">
		select count(*) from inquiry
	</select>
	
	<delete id="inquiryDelete" parameterType="int">
		delete inquiry where inquiry_code=#{inquiry_code}
	</delete>

</mapper>
