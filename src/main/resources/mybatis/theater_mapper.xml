<select id="theaterList" parameterType="java.util.Map" resultType="theaterDTO">
		<![CDATA[select *
		from (select rownum rn, tt.* 
		from (select * from theater order by theater_code desc) tt)
		where rn>=#{startNum} and rn<=#{endNum}]]>
	</select>
	

